.jumbotron.col-md-6.col-sm-6(style="background:transparent")
  h1
    |{{post.title | limitTo: 120 }}
    i(ng-if="post.teaser.length > 120") ...
  p.tiny
    small
      span posted&nbsp;
      time(am-time-ago="post.created")
  p
    |{{post.teaser | limitTo: 240 }}
    i(ng-if="post.teaser.length > 240") ...
  p
    a.btn.btn-success(ng-click='upvotePost(post)')
      span.glyphicon.glyphicon-thumbs-up
      |&nbsp;&nbsp;{{post.upvotes}} flaps
    |&nbsp;
    a.btn.btn-info(href='#/posts/{{post.id}}')
      span.glyphicon.glyphicon-comment
      |&nbsp;&nbsp;{{post.comments.length || 0}} Comments
      
.col-md-6.col-sm-6.thumbnail.min-height
  a(href='#/posts/{{post.id}}')
    img(ng-if='post.image', img-default, try-src='{{CDN_URL}}{{SCREENSHOTS}}{{post.image}}', default-src='img/default.jpg')
    img(ng-if='!post.image', img-default, try-src='{{CDN_URL}}{{SCREENSHOTS}}{{post.id}}.jpg', default-src='img/default.jpg')
.thumbnail
  a.embed-responsive.embed-responsive-16by9.screenshots(href='#/posts/{{post.id}}')
    img.embed-responsive-item(ng-if='post.image', img-default, ng-src='{{CDN_URL}}{{SCREENSHOTS}}{{post.image}}', default-src='img/default.jpg')
    img.embed-responsive-item(ng-if='!post.image', img-default, ng-src='{{CDN_URL}}{{SCREENSHOTS}}{{post.id}}.jpg', default-src='img/default.jpg')

h4
  a.favicon(href='#/posts/{{post.id}}')
    img(ng-if='post.icon', img-default, ng-src='{{CDN_URL}}{{FAVICONS}}{{post.icon}}', default-src='favicon.ico')
    img(ng-if='!post.icon', img-default, ng-src='{{CDN_URL}}{{FAVICONS}}{{post.id}}.ico', default-src='favicon.ico')
  |&nbsp;
  a(href='#/posts/{{post.id}}') 
    |{{post.title | limitTo: 50 }}
    i(ng-if="post.title.length > 50") ...

p.post-desc
  |{{post.teaser | limitTo: 70 }}
  i(ng-if="post.teaser.length > 70") ...

p.tiny
    small
      span posted&nbsp;
      time(am-time-ago="post.created")

p
  a.btn.btn-success(ng-click='upvotePost(post)')
    span.glyphicon.glyphicon-thumbs-up
    |&nbsp;&nbsp;{{post.upvotes}} flaps
  |&nbsp;
  a.btn.btn-info(href='#/posts/{{post.id}}')
    span.glyphicon.glyphicon-comment
    |&nbsp;&nbsp;{{post.comments.length || 0}} Comments


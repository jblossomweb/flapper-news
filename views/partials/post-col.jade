.thumbnail
  a.screenshots(href='#/posts/{{post.id}}')
    img(img-default, ng-src='{{CDN_URL}}img/screenshots/{{post.id}}.jpg', default-src='img/default.jpg')

h4
  a.favicon(href='#/posts/{{post.id}}')
    img(img-default, ng-src='{{CDN_URL}}img/favicons/{{post.id}}.ico', default-src='favicon.ico')
  |&nbsp;
  a(href='#/posts/{{post.id}}') {{post.title}}

p.post-desc {{post.teaser}}

p
  a.btn.btn-success(ng-click='upvotePost(post)')
    span.glyphicon.glyphicon-thumbs-up
    |&nbsp;&nbsp;{{post.upvotes}} flaps
  |&nbsp;
  a.btn.btn-info(href='#/posts/{{post.id}}')
    span.glyphicon.glyphicon-bullhorn
    |&nbsp;&nbsp;{{post.comments.length || 0}} Comments


.window-scroller(infinite-scroll="morePosts(4)", can-load="canLoad")
  .container
    include inc/page-header.jade

    .row.page-header(ng-repeat="post in posts", ng-if="$index === 0")
      include inc/post-jumbotron.jade

    .row.page-header
      .col-md-3.col-sm-6.col-xs-6.post-col(ng-repeat="post in posts", ng-if="$index > 0")
        include inc/post-col.jade
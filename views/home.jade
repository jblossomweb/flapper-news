.window-scroller(infinite-scroll="morePosts(4)", can-load="canLoad", threshold="100")
  include inc/page-header.jade
  .container

    .row.page-header(ng-repeat="post in posts", ng-if="$index === 0")
      include inc/post-jumbotron.jade

    .row.page-header
      .col-md-3.col-sm-4.col-xs-6.col-xxs-12.post-col(ng-repeat="post in posts", ng-if="$index > 0")
        include inc/post-col.jade